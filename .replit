modules = ["java", "java-17"]

[nix]
channel = "stable-24_05"
packages = ["maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flink Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build_flink_application"

[[workflows.workflow]]
name = "Flink Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd $REPL_HOME && mvn exec:java -Dexec.mainClass=\"com.dataflow.flink.SchemaValidationJob\" -Dexec.args=\"--config config/local.properties\""

[[workflows.workflow]]
name = "build_flink_application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd $REPL_HOME && mvn package -DskipTests"

[deployment]
run = ["sh", "-c", "cd $REPL_HOME && mvn exec:java -Dexec.mainClass=\"com.dataflow.flink.SchemaValidationJob\" -Dexec.args=\"--config config/local.properties\""]
